{% extends 'base.html.twig' %}


{% block body %}
    <style>
        ul {
            list-style-type: none;
            padding: 0;
        }
        .message-bubble {
            background-color: #e1f5fe;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 15px;
            max-width: 80%;
            position: relative;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .message-bubble::after {
            content: "";
            position: absolute;
            top: 15px;
            left: -10px;
            border-width: 10px;
            border-style: solid;
            border-color: transparent #e1f5fe transparent transparent;
        }
        h3 {
            margin: 0 0 10px 0;
            font-size: 1.2em;
            color: #333;
        }
        p {
            margin: 5px 0;
            color: #666;
        }
        .message-date {
            font-size: 0.8em;
            color: #999;
        }
        a {
            display: inline-block;
            padding: 8px 15px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }
        a:hover {
            background-color: #0056b3;
        }
    </style>

    <ul>
        {% for message in messages %}
            <div class="message-bubble">
                <h3>{{ message.interlocuteur.username }} - {{ message.products.title }}</h3>
                <p>{{ message.text }}</p>
                <p class="message-date"><em>{{ message.date|date('Y-m-d H:i') }}</em></p>
                <a href="{{ path('view_message', { 'productId': message.products.id, 'buyerId': message.buyer.id, 'sellerId': message.products.users.id }) }}">Voir la discussion</a>
            </div>
        {% else %}
            <p>Aucun message trouv√©.</p>
        {% endfor %}
    </ul>
{% endblock %}
