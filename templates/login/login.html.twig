{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <style>
        body {
            background: #E8E0D2;
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
        }
        
        .login-container {
            max-width: 400px;
            margin: 100px auto; /* Center the form vertically */
            padding: 20px;
            background: white; /* White background for the form */
            border-radius: 15px; /* Rounded corners */
            box-shadow: 0 1px 10px rgba(189, 110, 122, 0.5);
        }

        h1 {
            font-size: 24px;
            color: #BD6E7A;
            text-align: center;
        }

        label {
            margin-top: 10px;
            display: block;
            font-weight: bold;
            padding-right: 10px; /* Padding à droite pour éviter que les labels touchent le bord */
        }

        input[type="email"],
        input[type="password"] {
            width: 100%;
            padding: 5px;
            margin: 5px 0 20px; /* Add spacing below input fields */
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button {
            padding: 10px 15px;
            border-radius: 4px;
            font-size: 16px;
            font-weight: bold;
            background-color: #BD6E7A;
            color: white;
            border: none;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #a95a65; /* Darker shade on hover */
        }

        .alert {
            background-color: #f8d7da;
            color: #721c24;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #f5c6cb;
            border-radius: 4px;
        }

        .link-container {
            text-align: center;
            margin-top: 15px;
        }
        
        .link-container a {
            color: #BD6E7A; /* Use the same color for links */
            text-decoration: underline;
        }
    </style>

    <div class="login-container">
        {% if error %}
            <div class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Login</h1>

        <form method="post">
            <label for="email">Email</label>
            <input type="email" value="{{ last_username }}" name="_username" id="email" class="form-control" autocomplete="email" required autofocus>

            <label for="password">Password</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="link-container">
                <a href="{{ path('app_register') }}">Register</a>
            </div>
            <button class="btn btn-lg btn-primary" type="submit">Sign in</button>
        </form>
    </div>
{% endblock %}
