{% block body %}
    <style>
        body {
            background: #E8E0D2;
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        
        .register-container {
            width: 400px;
            padding: 20px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 1px 10px rgba(189, 110, 122, 0.5);
            text-align: center;
        }

        h1 {
            font-size: 24px;
            color: #BD6E7A;
            margin-bottom: 20px;
        }

        label {
            margin-top: 10px;
            display: block;
            font-weight: bold;
            padding-right: 10px;
            text-align: left;
        }

        input[type="email"],
        input[type="password"],
        input[type="text"] {
            width: 100%;
            padding: 5px;
            margin: 5px 0 20px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button {
            padding: 10px 15px;
            border-radius: 4px;
            font-size: 16px;
            font-weight: bold;
            background-color: #BD6E7A;
            color: white;
            border: none;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #a95a65;
        }

        .alert {
            background-color: #f8d7da;
            color: #721c24;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #f5c6cb;
            border-radius: 4px;
        }

        .link-container {
            text-align: center;
            margin-top: 15px;
        }
        
        .link-container a {
            color: #BD6E7A;
            text-decoration: underline;
        }

        .logo {
            display: block;
            margin: 0 auto 20px;
            max-width: 180px; /* Taille du logo */
            height: auto; /* Maintient le ratio de l'image */
        }
    </style>

    <div class="register-container">
        <!-- Logo ajouté au-dessus du formulaire -->
        <img src="{{ asset('image/logo_20Ted.png') }}" alt="Logo" class="logo"/>

        <h1>Register</h1>

        <!-- Gestion des erreurs si nécessaires -->
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <form method="post">
            <label for="username">Username</label>
            <input type="text" name="username" id="username" class="form-control" required autofocus>

            <label for="email">Email</label>
            <input type="email" name="email" id="email" class="form-control" required>

            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="form-control" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-lg btn-primary" type="submit">Register</button>
        </form>

        <div class="link-container">
            <a href="{{ path('app_login') }}">Already have an account? Login</a>
        </div>
    </div>
{% endblock %}
